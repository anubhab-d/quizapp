<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. The main index/indices of NYSE is/are:"
            android:layout_marginTop="55dp"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:padding="20dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="309dp"
            android:padding="20dp"
            android:src="@drawable/nyse" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="35dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/a5"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="A. Dow Jones Industrial Average" />

            <Button
                android:id="@+id/b5"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="B. NYSE Composite"

                />

            <Button
                android:id="@+id/c5"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="C. S&amp;P 500" />

            <Button
                android:id="@+id/d5"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="D. All of the above" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>